@model UsersListingViewModel

@if (Model != null && Model.Users != null && Model.Users.Count() > 0)
{
    <div class="table-wrap mb-20">
        <div class="table-responsive">
            <table class="table table-dark table-bordered mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td class="w-20">
                                    @{ var roles = Model.Roles.Where(x => user.Roles.Any(y => y.RoleId.Contains(x.Id))).ToList(); }
                                    @foreach (var role in roles)
                                    {
                                       <span class="badge badge-danger">@role.Name</span>
                                      
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-gradient-info" href="@Url.Action("Details","Users",new { Id = user.Id })"><i class="icon-user mr-2"></i>More Details</a>
                                    <button class="show btn btn-gradient-primary m-1" data-href="@Url.Action("UserRoles", "Users" ,new { ID=user.Id})" data-toggle="modal" data-target="#myModal"><i class="fa fa-user-md mr-1"></i>Assign Role</button>

                                </td>
                            </tr>
                            i++;
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! NO records exist.
    </div>

}




<script>
    $(".show").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
            async: false,
            cache: false

        }).done(function (response) {
            $("#myModal .modal-dialog").html(response);
        }).fail(function (textStatus, errorThrown) {
            alert("FAIL");
        });

        //$("#input_tags").val([1, 3]).change();
    });
</script>