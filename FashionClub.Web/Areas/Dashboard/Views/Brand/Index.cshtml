@model BrandListingModel
@{
    ViewBag.Title = "Index";
}
<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item active">Brand</li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>
</nav>
<!-- /Breadcrumb -->
<div class="container">
    <div class="hk-pg-header">
        <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="tag"></i></span></span>Brand</h4>
    </div>
    <div class="row">
        <div class="col-xl-12 col-md-12">
            <div class="card card_border p-lg-5 p-3 mb-4">
                <div class="card-body py-3 p-0">
                    <div class="row">
                        <div class="col col-lg-12">
                            <form action="" method="get">
                                <div class="input-group col-lg-8 float-left">
                                    <input class="form-control filled-input m-1" id="search" placeholder="Search." name="searchTerm" value="@Model.SearchTerm" type="text" required />
                                </div>

                                <div class="input-group-append col-lg-4 float-left">
                                    <button class="btn btn-primary ml-0 m-1" type="submit"><i class="fa fa-search mr-1"></i>Search</button>
                                    <a class="btn btn-secondary m-1" href="@Url.Action("Index", "Brand")"><i class="fa fa-refresh mr-1"></i>Reset</a>
                                    <button class="modalBtn btn btn-info mr-0 m-1" data-href="@Url.Action("Action", "Brand")" data-toggle="modal" data-target="#myModal" type="button"><i class="fa fa-plus mr-1"></i>Create</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <hr />
                    <div id="table">
                        @*@{Html.RenderPartial("_Listing", Model);}*@
                        @Html.Action("ListingView", "Brand", new { SearchTerm = Model.SearchTerm })
                    </div>


                </div>
            </div>
        </div>


        <div class="container">

            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalEmail" aria-hidden="true">
                <div class="modal-dialog modal-sm" role="document">

                </div>
            </div>
            <!-- /.modal -->
        </div>
    </div>
</div>

<script>

    $(".modalBtn").click(function () {
        $.ajax({
            url: $(this).attr("data-href")

        }).done(function (response) {
            $("#myModal .modal-dialog").html(response);
        }).fail(function (XHLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        });
    });
</script>


