@model  SubCategoryDeleteModel

@if (Model != null)
{

    <div class="modal-content">
        <div class="modal-body">
            <form id="deleteForm">
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-warning form-group text-center" role="alert">
                <span class="alert-icon-wrap"><i class="zmdi zmdi-alert-circle-o"></i></span>
                <h5 class="alert-heading">Are you sure you want to delete this?</h5>

            </div>
            <div class="form-group text-center">
                <button type="button" id="deleteBtn" class="btn btn-danger mr-1"><b>Delete</b></button>
                <button type="button" class="btn btn-secondary ml-1" data-dismiss="modal"><b>Cancel</b></button>
            </div>
        </div>
        <div class="errorMessage"></div>

    </div>

}
